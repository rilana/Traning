@model WebSales.Models.OrderFilterModels
@{
    ViewBag.Title = "Reports Goods";
}

<h2>Reports Goods</h2>
<ul class="nav nav-tabs">
    <li>@Html.ActionLink("Reports manager", "Index", "Reports")</li>
    <li class="active">@Html.ActionLink("Reports goods", "Goods", "Reports")</li>
</ul>

@using (Ajax.BeginForm(new AjaxOptions { Url = Url.Action("Report"), UpdateTargetId = "reportView" }))
{
    <div class="form-inline">
        <label class="control-label">Select goods: </label>
        @Html.DropDownList("FilterGoods", (SelectList)ViewBag.FilterGoods, "All")
        <label class="control-label">From: </label>
        @Html.EditorFor(model => model.DateStart, new { htmlAttributes = new { @class = "form-control" } })
        <label class="control-label">To: </label>
        @Html.EditorFor(model => model.DateFinish, new { htmlAttributes = new { @class = "form-control" } })
        <input type="submit" value="Ok" />
    </div>
}
@Html.Partial("Report")



